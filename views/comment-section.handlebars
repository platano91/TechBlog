{{!-- Checking if there are any comments --}}
{{#if comments.length}}
    <div class="comments-section">
        <h3>Comments</h3>
        <ul class="comments-list">
            {{!-- Iterating over each comment --}}
            {{#each comments}}
                <li class="comment">
                    <p class="comment-content">{{this.content}}</p>
                    <div class="comment-info">
                        <span class="comment-author">By: {{this.username}}</span>
                        <span class="comment-date">{{formatDate this.createdAt}}</span>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
{{else}}
    <p>No comments yet. Be the first to comment!</p>
{{/if}}
