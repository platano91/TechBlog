{{!-- Layout Inheritance --}}
{{#extend "main"}}

{{!-- Content Insertion in {{{body}}} of Main Layout --}}
{{#block "content"}}

<header>
    <h1>Welcome to the Tech Blog</h1>
    <!-- Navigation and other header elements -->
</header>

<main>
    {{#if posts.length}}
        <section class="posts">
            {{#each posts}}
                <article class="post">
                    <h2>{{this.title}}</h2>
                    <p>{{this.summary}}</p>
                    <div class="post-info">
                        <span>By {{this.author}}</span>
                        <span>On {{dateFormat this.createdAt}}</span>
                    </div>
                    <a href="/posts/{{this.id}}">Read more</a>
                </article>
            {{/each}}
        </section>
    {{else}}
        <p>No posts to display.</p>
    {{/if}}
</main>

{{/block}}

{{/extend}}
