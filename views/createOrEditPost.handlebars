{{!-- createOrEditPost.handlebars --}}

{{#if editing}}
    <h1>Edit Blog Post</h1>
{{else}}
    <h1>Create a New Blog Post</h1>
{{/if}}

<form action="{{#if editing}}/dashboard/edit/{{post.id}}{{else}}/dashboard/create{{/if}}" method="POST">
    <div>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="{{post.title}}" required>
    </div>

    <div>
        <label for="content">Content:</label>
        <textarea id="content" name="content" rows="4" required>{{post.content}}</textarea>
    </div>

    <button type="submit">{{#if editing}}Update{{else}}Create{{/if}} Post</button>
</form>

{{#if editing}}
    <a href="/dashboard">Cancel</a>
{{else}}
    <a href="/dashboard">Back to Dashboard</a>
{{/if}}
