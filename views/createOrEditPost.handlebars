{{!-- createOrEditPost.handlebars --}}
{{#if editing}}
    <h1>Edit Blog Post</h1>
{{else}}
    <h1>Create a New Blog Post</h1>
{{/if}}

<form id="post-form" action="{{#if editing}}/dashboard/edit/{{post.id}}{{else}}/dashboard/create{{/if}}" method="POST">
    <div>
        <label for="post-title">Title:</label>
        <input type="text" id="post-title" name="title" value="{{post.title}}" required>
    </div>

    <div>
        <label for="post-content">Content:</label>
        <textarea id="post-content" name="content" rows="4" required>{{post.content}}</textarea>
    </div>

    {{#if editing}}
        <input type="hidden" id="post-id" value="{{post.id}}">
    {{/if}}

    <button type="submit">{{#if editing}}Update{{else}}Create{{/if}} Post</button>
</form>

<!-- Include the managePost.js script -->
<script src="/js/managePost.js" defer></script>
