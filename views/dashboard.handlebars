{{!-- Dashboard.handlebars --}}

{{!-- Extend the main layout --}}
{{#extend "main"}}

{{!-- Content specific to the Dashboard --}}
{{#content "body"}}
<h1>Your Dashboard</h1>

{{!-- Display message if there are no posts --}}
{{#if posts.length}}
  <div class="dashboard-posts">
    {{#each posts}}
      <div class="post" id="post-{{this.id}}">
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>

        {{!-- Edit and Delete buttons for each post --}}
        <button onclick="location.href='/edit-post/{{this.id}}'">Edit</button>
        <button class="delete-post-btn" data-id="{{this.id}}">Delete</button>
      </div>
    {{/each}}
  </div>
{{else}}
  <p>You have not created any posts yet.</p>
{{/if}}

{{!-- Button to create a new post --}}
<button onclick="location.href='/create-post'">Create New Post</button>
<script src="/js/deletePost.js"></script>
{{/content}}

{{/extend}}
